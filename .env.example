# ===== CONFIGURAÇÕES GERAIS =====
COMPOSE_PROJECT_NAME=AUTOMALLAMA

# ===== CHAVES SECRETAS =====
WEBUI_SECRET_KEY=


# ===== CONFIGURAÇÕES DO SEARXNG =====
SEARXNG_SECRET=
SEARXNG_BASE_URL=http://localhost:8080/
SEARXNG_REDIS_URL=redis://redis:6379/0
SEARXNG_MAX_MEMORY=512m

# ===== CONFIGURAÇÕES DO OPEN WEB UI =====
WEBUI_NAME=Open Web UI Local
DEFAULT_LOCALE=pt-BR
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true
ENABLE_WEB_SEARCH=true

# ===== CONFIGURAÇÕES DO OLLAMA =====
OLLAMA_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
OLLAMA_HOST=0.0.0.0
OLLAMA_KEEP_ALIVE=24h
OLLAMA_MAX_LOADED_MODELS=2

# ===== CONFIGURAÇÕES DO SEARXNG =====
SEARXNG_BASE_URL=http://localhost:8080/
SEARXNG_REDIS_URL=redis://redis:6379/0

# ===== CONFIGURAÇÕES DE REDE =====
OPEN_WEBUI_PORT=3000
SEARXNG_PORT=8080
OLLAMA_PORT=11434

# ===== CONFIGURAÇÕES DE VOLUME =====
OLLAMA_DATA_PATH=./data/ollama
WEBUI_DATA_PATH=./data/webui
REDIS_DATA_PATH=./data/redis

# ===== CONFIGURAÇÕES DE PERFORMANCE =====
OLLAMA_MAX_MEMORY=4g
WEBUI_MAX_MEMORY=1g
SEARXNG_MAX_MEMORY=512m
REDIS_MAX_MEMORY=256m

# ===== CONFIGURAÇÕES OPCIONAIS =====
# Timezone
TZ=America/Sao_Paulo

# ===== CONFIGURAÇÕES DE BACKUP =====
BACKUP_DIR=./backups

# ===== CONFIGURAÇÕES DE LOGS =====
LOG_LEVEL=info

# Rotação de logs
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

